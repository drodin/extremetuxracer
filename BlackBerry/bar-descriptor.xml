<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">

<!-- BlackBerry Tablet OS application descriptor file.

    Specifies parameters for identifying, installing, and launching native applications on BlackBerry Tablet OS.

-->

    <!-- A universally unique application identifier. Must be unique across all BlackBerry Tablet OS applications.
         Using a reverse DNS-style name as the id is recommended. (Eg. com.example.ExampleApplication.) Required. -->
    <id>com.drodin.extremetuxracer</id>

    <!-- The name that is displayed in the BlackBerry Tablet OS application installer. 
         May have multiple values for each language. See samples or xsd schema file. Optional. -->
    <name>Extreme Tux Racer</name>
    
    <!-- A string value of the format <0-999>.<0-999>.<0-999> that represents application version which can be used to check for application upgrade. 
         Values can also be 1-part or 2-part. It is not necessary to have a 3-part value.
         An updated version of application must have a versionNumber value higher than the previous version. Required. -->
    <versionNumber>0.6.0</versionNumber>
    <buildId>10</buildId>

    <!-- Fourth digit segment of the package version. First three segments are taken from the 
         <versionNumber> element.  Must be an integer from 0 to 2^16-1 -->
                 
    <!-- A string value (such as "v1", "2.5", or "Alpha 1") that represents the version of the application, as it should be shown to users. Optional. -->
    <!-- <versionLabel></versionLabel> -->

    <!-- Description, displayed in the BlackBerry Tablet OS application installer.
         May have multiple values for each language. See samples or xsd schema file. Optional. -->
    <description>Extreme Tux Racer</description>

    <!-- Copyright information. Optional. -->
    <!-- <copyright></copyright> -->

    <!--  Name of author which is used for signing. Must match the developer name of your development certificate. -->
    <author>drodin</author>
    <authorId>gYAAgG1KCkMS4yrfT3u00hlkbxo</authorId>
    
    <!--  Unique author ID assigned by signing authority. Required if using debug tokens. -->
    <!-- <authorId>ABC1234YjsnUk235h</authorId> -->
   
    <initialWindow>
        <aspectRatio>landscape</aspectRatio>
        <autoOrients>false</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    
    <!--  The category where the application appears. Either core.games or core.media. -->
    <category>core.games</category>
    <asset path="icon.png">icon.png</asset>
    <asset path="icon_big.png">icon_big.png</asset>
    <asset path="../data">data</asset>
    <configuration name="Device-Debug">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="Device-Debug/extremetuxracer" entry="true" type="Qnx/Elf">extremetuxracer</asset>
       <asset path="${workspace_loc:/GLwrapper/Device-Debug/libGLwrapper.so}" type="Qnx/Elf">lib/libGLwrapper.so</asset>
       <asset path="${workspace_loc:/SDL2/Device-Debug/libSDL2.so}" type="Qnx/Elf">lib/libSDL2.so</asset>
       <asset path="${workspace_loc:/SDL2_image/Device-Debug/libSDL2_image.so}" type="Qnx/Elf">lib/libSDL2_image.so</asset>
       <asset path="${workspace_loc:/SDL2_mixer/Device-Debug/libSDL2_mixer.so}" type="Qnx/Elf">lib/libSDL2_mixer.so</asset>
    </configuration>
    <configuration name="Device-Release">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="Device-Release/extremetuxracer" entry="true" type="Qnx/Elf">extremetuxracer</asset>
       <asset path="${workspace_loc:/GLwrapper/Device-Release/libGLwrapper.so}" type="Qnx/Elf">lib/libGLwrapper.so</asset>
       <asset path="${workspace_loc:/SDL2/Device-Release/libSDL2.so}" type="Qnx/Elf">lib/libSDL2.so</asset>
       <asset path="${workspace_loc:/SDL2_image/Device-Release/libSDL2_image.so}" type="Qnx/Elf">lib/libSDL2_image.so</asset>
       <asset path="${workspace_loc:/SDL2_mixer/Device-Release/libSDL2_mixer.so}" type="Qnx/Elf">lib/libSDL2_mixer.so</asset>
    </configuration>
    <configuration name="Simulator">
       <platformArchitecture>x86</platformArchitecture>
       <asset path="Simulator/extremetuxracer" entry="true" type="Qnx/Elf">extremetuxracer</asset>
       <asset path="${workspace_loc:/GLwrapper/Simulator/libGLwrapper.so}" type="Qnx/Elf">lib/libGLwrapper.so</asset>
       <asset path="${workspace_loc:/SDL2/Simulator/libSDL2.so}" type="Qnx/Elf">lib/libSDL2.so</asset>
       <asset path="${workspace_loc:/SDL2_image/Simulator/libSDL2_image.so}" type="Qnx/Elf">lib/libSDL2_image.so</asset>
       <asset path="${workspace_loc:/SDL2_mixer/Simulator/libSDL2_mixer.so}" type="Qnx/Elf">lib/libSDL2_mixer.so</asset>
    </configuration>
    
    <!--  The icon for the application, which should be 86x86. -->
    <icon>
        <image>icon.png</image>
        <image>icon_big.png</image>
    </icon>
    
    <!--  The splash screen that will appear when your application is launching. Should be 1024x600. -->
    <!-- <splashscreen></splashscreen> -->

    <!-- Request permission to execute native code.  Required for native applications. -->
    <permission system="true">run_native</permission>
    
    <!--  The permissions requested by your application. -->
    <!--  <action>record_audio</action> -->
    <!--  <action>read_geolocation</action> -->
    <!--  <action>use_camera</action> -->
    <!--  <action>access_internet</action> -->
    <!--  <action>play_audio</action> -->
    <!--  <action>post_notification</action> -->
    <!--  <action>set_audio_volume</action> -->
    <!--  <action>read_device_identifying_information</action> -->

    <!-- Ensure that shared libraries in the package are found at run-time. -->
    <env var="LD_LIBRARY_PATH" value="app/native/lib"/>

</qnx>
